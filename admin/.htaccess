# Pages rewrite
RewriteCond %{REQUEST_URI} ^/admin/(lessons|competences|images|users|groups)$
RewriteRule (.*) /admin/ [QSA,L]

# PDF rewrite
RewriteRule ^lesson/(.*) lesson.php?id=$1

# Server push
<FilesMatch "index.html">
	Header add Link "</styles/fontello.css>;rel=preload;as=style"
	Header add Link "</styles/lesson.css>;rel=preload;as=style"
	Header add Link "</styles/mainPage.css>;rel=preload;as=style"
	Header add Link "</admin/styles/button.css>;rel=preload;as=style"
	Header add Link "</admin/styles/dialog.css>;rel=preload;as=style"
	Header add Link "</admin/styles/main.css>;rel=preload;as=style"
	Header add Link "</admin/styles/mainView.css>;rel=preload;as=style"
	Header add Link "</admin/styles/sidePanel.css>;rel=preload;as=style"
	Header add Link "</dist/shared-pushed.min.js>;rel=preload;as=script"
	Header add Link "</dist/admin-pushed.min.js>;rel=preload;as=script"
</FilesMatch>
